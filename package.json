{
  "name": "zwiftpower-race-replay",
  "version": "1.0.0",
  "description": "Browser extension to sync and replay Zwift races from ZwiftPower",
  "private": true,
  "scripts": {
    "lint": "echo 'No linter configured'",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:firefox": "cp manifest.firefox.json manifest.json && echo 'Switched to Firefox manifest'",
    "build:chrome": "cp manifest.chrome.json manifest.json && echo 'Switched to Chrome manifest'"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/lib/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/veelenga/zwiftpower-race-reply"
  },
  "keywords": [
    "zwift",
    "zwiftpower",
    "cycling",
    "race",
    "analysis",
    "browser-extension",
    "chrome-extension"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "jest": "^30.2.0"
  }
}
